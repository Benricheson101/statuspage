{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "outDir": "./build",
    "sourceMap": false,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@types": ["src/utils/types"],
      "@classes/*": ["src/utils/classes/*"]
    }
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src/utils/types"
  ],
  "exclude": [
    "node_modules"
  ]
}
